{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "web~/*": ["containers/web/*"],
      "mobile~/*": ["containers/mobile/*"],
      "webview~/*": ["containers/webview/*"]
    },
    "typeRoots": [
      "../node_modules/@types",
      "@types"
    ]
  }
}
